
@{
    Layout = null;
}
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css" rel="stylesheet" />

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 240px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 16px;
        }

            .sidebar a {
                padding: 10px 14px 10px 10px;
                text-decoration: none;
                font-size: 20px;
                color: #818181;
                display: block;
            }

                .sidebar a:hover {
                    color: #0094ff;
                }

        .main {
            margin-left: 240px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="#"><i class="glyphicon glyphicon-home"></i> Ana Sayfa</a>
        <a href="/Kategori/Index"><i class="glyphicon glyphicon-list"></i> Kategoriler</a>
        <a href="/Kitap/Index"><i class="glyphicon glyphicon-book"></i> Kitaplar</a>
        <a href="/Yazar/Index"><i class="glyphicon glyphicon-pencil"></i> Yazarlar</a>
        <a href="/Uye/Index"><i class="glyphicon glyphicon-user"></i> Üyeler</a>
        <a href="/Personel/Index"><i class="glyphicon glyphicon-tower"></i> Personeller</a>
        <a href="/Odunc/OduncVer/"><i class="glyphicon glyphicon-circle-arrow-right"></i> Ödünç Kitap Ver</a>
        <a href="/Odunc/Index"><i class="glyphicon glyphicon-circle-arrow-left"></i> Ödünç Kitap Al</a>
        <a href="/Istatistik/Index"><i class="glyphicon glyphicon-sort"></i> İstatistikler</a>
        <a href="#"><i class="glyphicon glyphicon-euro"></i> Kasa</a>
        <a href="/Islem/Index"><i class="glyphicon glyphicon-dashboard"></i> İşlemler</a>
        <a href="#"><i class="glyphicon glyphicon-picture"></i> Galeri</a>
        <a href="/Vitrin/Index"><i class="glyphicon glyphicon-gift"></i> Vitrin</a>
        <a href="#"><i class="glyphicon glyphicon-cog"></i> Ayarlar</a>
        <a href="#"><i class="glyphicon glyphicon-phone"></i> Yardım</a>
        <a href="#"><i class="glyphicon glyphicon-remove-sign"></i> Çıkış</a>
    </div>

    <div class="main">
        @RenderBody()
    </div>

</body>
</html>
