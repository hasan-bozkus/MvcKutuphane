@model MvcKutuphane.Models.Entities.Personel
@{
    ViewBag.Title = "PersonelGuncelle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Personeli Güncelle</h2>

@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{
    <div style="margin-bottom:15px;"></div>
    <div class="form-group">

        @Html.HiddenFor(x => x.PersonelID)

        @Html.Label("Personel Adı")
        @Html.TextBoxFor(x => x.PersonelAd, new { @Class = "form-control" })
    </div>
    <div>
        <button class="btn btn-success"> Kaydet </button>
    </div>
}


