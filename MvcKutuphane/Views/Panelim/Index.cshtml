@model MvcKutuphane.Models.Entities.Uyeler
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Kütüphane Üye Profil Bilgileri</h2>


@using (Html.BeginForm("Index2", "Panelim", FormMethod.Post))
{
    <table class="table table-hover" style="margin-top:30px;">
        <tr>
            <td>E-Posta Adresi: @HttpContext.Current.User.Identity.Name</td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(x => x.UyeAd)
                @Html.TextBoxFor(x => x.UyeAd, new { @Class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.UyeSoyad)
                @Html.TextBoxFor(x => x.UyeSoyad, new { @Class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.KullaniciAd)
                @Html.TextBoxFor(x => x.KullaniciAd, new { @Class = "form-control" })
            </td>
        </tr>
        <tr>
            <td><label style="font-weight:bolder">Şifre:</label> <input type="text" class="form-control" value="@Model.Sifre" name="Sifre" /> </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.Fotograf)
                @Html.TextBoxFor(x => x.Fotograf, new { @Class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.UyeOkul)
                @Html.TextBoxFor(x => x.UyeOkul, new { @Class = "form-control" })
            </td>
        </tr>
        <tr>
            <td><button class="btn btn-warning">Şifre Güncelle</button></td>
        </tr>
    </table>
}