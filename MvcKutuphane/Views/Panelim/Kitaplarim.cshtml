@model List<MvcKutuphane.Models.Entities.Hareketler>
@{
    ViewBag.Title = "Kitaplarim";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
    int count = 0;
}

<h2>Kitap Geçmişim</h2>

<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kitap Adı</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
       
    </tr>
    @foreach (var item in Model)
    {
        count++;

        <tr>
            <td>@count</td>
            <td>@item.Kitap1.KitapAd</td>
            <td>@(((DateTime)item.AlisTarih).ToString("dd-MM-yyyy"))</td>
            <td>@(((DateTime)item.İadeTarih).ToString("dd-MM-yyyy"))</td>
        </tr>
    }
</table>

<br />