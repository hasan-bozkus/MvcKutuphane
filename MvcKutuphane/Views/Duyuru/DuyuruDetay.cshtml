@model MvcKutuphane.Models.Entities.Duyurular
@{
    ViewBag.Title = "DuyuruDetay";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Duyuru Detay</h2>

@using (Html.BeginForm("DuyuruGuncelle", "Duyuru", FormMethod.Post))
{
    <div style="margin-bottom:15px;"></div>
    <div class="form-group">

        @Html.HiddenFor(x => x.DuyuruID)

        @Html.Label("Duyuru Kategorisi")
        @Html.TextBoxFor(x => x.Kategori, new { @Class = "form-control" })
        <br />

        @Html.Label("Duyuru İçeriği")
        @Html.TextAreaFor(x => x.Icerik, 5, 3, new { @Class = "form-control" })
        <br />

        @Html.Label("Duyuru Tarihi")
        @Html.TextBoxFor(x => x.Tarih, new { @Class = "form-control" })
        <br />
    </div>
    <div>
        <button class="btn btn-success"> Kaydet </button>
    </div>
}
