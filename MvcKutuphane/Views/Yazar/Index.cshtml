@model List<MvcKutuphane.Models.Entities.Yazar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
    int count = 0;
}

<h2>Yazarlar</h2>

<table class="table table-striped">
    <tr style="background-color:rgb(252, 178, 22);">
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Yazarın Kitapları</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.YazarAd</td>
            <td>@item.YazarSoyad</td>
            <td>@Html.ActionLink("Sil", "YazarSil", new { id = item.YazarID }, new { @Class = "btn btn-danger", onclick="return confirm('Silmek istediğinize emin misiniz?')" })</td>
            <td><a href="/Yazar/YazarGuncelle/@item.YazarID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Yazar/YazarKitaplar/@item.YazarID" class="btn btn-default" style="background-color:lightseagreen; color: white;">Yazarın Kitapları</a></td>
        </tr>
    }

</table>

<a class="btn btn-primary" href="/Yazar/YazarEkle">Yeni Yazar Ekle</a>